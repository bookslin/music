/* components/nav-bar/nav-bar.wxss */
/* 自定义导航 */
.nav{
    display: flex;
    height: 44px;
    color: #fff;
}

.nav .left, .nav .right{
    width: 120rpx;
}
.nav .center{
   flex: 1;
}
.left, .center , .right {
   display: flex;
   justify-content: center;
   align-items: center;
}

/* 插槽 */
.default{
    display: none;
}
.slot:empty + .default{
    display: flex;
}